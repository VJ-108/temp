# Base image - slim variant for smaller size
FROM node:20-slim

# Install essential packages
RUN apt-get update && apt-get install -y \
    bash \
    curl \
    git \
    procps \
    net-tools \
    python3 \
    python3-pip \
    build-essential \
    socat \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Configure bash for better terminal experience
RUN echo 'export TERM=xterm-256color' >> /etc/bash.bashrc && \
    echo 'export COLORTERM=truecolor' >> /etc/bash.bashrc && \
    echo 'export PS1="\[\033[01;32m\]bash>\[\033[00m\] "' >> /etc/bash.bashrc && \
    echo 'alias ll="ls -alh"' >> /etc/bash.bashrc && \
    echo 'alias cls="clear"' >> /etc/bash.bashrc

# Set working directory
WORKDIR /workspace

# Keep container running
STOPSIGNAL SIGTERM
CMD ["bash", "-c", "trap 'exit 0' SIGTERM; tail -f /dev/null & wait"]